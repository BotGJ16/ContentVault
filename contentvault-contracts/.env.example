# Smart Contract Deployment Environment Variables

# Private Key for Deployment
PRIVATE_KEY=your_ethereum_private_key_here

# Infura Project ID
INFURA_PROJECT_ID=your_infura_project_id

# Etherscan API Key for Contract Verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Alchemy API Key (Alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_api_key

# Network Configuration
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Contract Deployment Parameters
TREASURY_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
PLATFORM_FEE_BASIS_POINTS=500

# Gas Price Configuration
GAS_PRICE_GWEI=20
MAX_FEE_PER_GAS_GWEI=25
MAX_PRIORITY_FEE_PER_GAS_GWEI=2

# Contract Verification
VERIFY_CONTRACTS=true

# Development Configuration
HARDHAT_NETWORK=localhost
HARDHAT_FORKING_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
HARDHAT_FORKING_ENABLED=false

# Test Configuration
COVERAGE_ENABLED=false
GAS_REPORTER_ENABLED=false
